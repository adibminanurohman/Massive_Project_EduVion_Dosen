<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bgsplash"
    android:layout_height="match_parent"
    tools:context=".activity.EJurnalActivity">

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_ejurnal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/kategorijurnal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton9"
        app:layout_constraintVertical_bias="0.023" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="611dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_marginTop="11dp"
                android:layout_width="367dp"
                android:layout_height="148dp"
                android:src="@drawable/jurnal1" />

            <ImageView
                android:layout_marginTop="11dp"
                android:id="@+id/imageView9"
                android:layout_width="367dp"
                android:layout_height="148dp"
                android:src="@drawable/jurnal2" />

            <ImageView
                android:layout_marginTop="11dp"
                android:id="@+id/imageView10"
                android:layout_width="367dp"
                android:layout_height="148dp"
                android:src="@drawable/jurnal3" />

            <ImageView
                android:layout_marginTop="11dp"
                android:id="@+id/imageView11"
                android:layout_width="367dp"
                android:layout_height="148dp"
                android:src="@drawable/jurnal4" />
            <ImageView
                android:layout_marginTop="11dp"
                android:id="@+id/imageView12"
                android:layout_width="367dp"
                android:layout_height="148dp"
                android:src="@drawable/jurnal1" />

        </LinearLayout>
    </ScrollView>

    <ImageButton
        android:id="@+id/bt_unggah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:src="@drawable/btnunggah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

</androidx.constraintlayout.widget.ConstraintLayout>